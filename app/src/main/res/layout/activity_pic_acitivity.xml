<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_pic_acitivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.lyc.vrexplayer.activity.PicAcitivity">


    <Button
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancle_del"
        android:textSize="15sp"
        android:visibility="gone"
        android:text="删除"
        />



    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal">

        <ImageView android:id="@+id/iv_left" android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:scaleType="fitXY"
                   android:layout_weight="1"
        />
        <ImageView android:id="@+id/iv_right" android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:scaleType="fitXY"
                   android:layout_weight="1"
        />
    </LinearLayout>
    <com.example.lyc.vrexplayer.view.ObservableScrollView
        android:scrollbars="none"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/scroll_view_pic">
        <LinearLayout android:id="@+id/ll_scrollview_container_pic"

                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
        </LinearLayout>
    </com.example.lyc.vrexplayer.view.ObservableScrollView>
</RelativeLayout>
