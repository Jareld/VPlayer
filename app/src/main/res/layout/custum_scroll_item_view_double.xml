<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
         android:gravity="center_horizontal"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_marginLeft="60dp"
        android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1" android:orientation="vertical">
        <ImageView android:id="@+id/item_scroll_view_double_1"
                   style="@style/item_scrollview_ll_imageview"/>
        <include android:id="@+id/item_tx_scroll_view_double_1"
                 layout="@layout/item_view_textview"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="60dp"
        android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1" android:orientation="vertical">

        <ImageView android:id="@+id/item_scroll_view_double_2"
                   style="@style/item_scrollview_ll_imageview"
        />

        <include android:id="@+id/item_tx_scroll_view_double_2"
                 layout="@layout/item_view_textview"/>

    </LinearLayout>
    <LinearLayout android:layout_width="0dp"
                  android:layout_marginLeft="60dp" android:layout_height="wrap_content"
                  android:layout_weight="1" android:orientation="vertical">


        <ImageView android:id="@+id/item_scroll_view_double_3"
                   style="@style/item_scrollview_ll_imageview"
        />
        <include android:id="@+id/item_tx_scroll_view_double_3"
                 layout="@layout/item_view_textview"/>

    </LinearLayout>
    <LinearLayout android:layout_width="0dp"
                  android:layout_marginRight="60dp" android:layout_height="wrap_content"
                  android:layout_weight="1" android:orientation="vertical">


        <ImageView android:id="@+id/item_scroll_view_double_4"
                   style="@style/item_scrollview_ll_imageview"
        />

        <include android:id="@+id/item_tx_scroll_view_double_4"
                 layout="@layout/item_view_textview"/>

    </LinearLayout>


</LinearLayout>